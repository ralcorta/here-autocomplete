{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "module": "commonjs",
        "strict": true,
        "sourceMap": true,
        "allowJs": true,
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "preserveSymlinks": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "__tests__S"
    ]
}